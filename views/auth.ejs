<%- include('header'); -%>

<main id="authApp">
  <div class="container">
    <div class="card ">
      <div class="card-content">
        <span class="card-title">Авторизация</span>
        <p>Введите свои учетные данные для дальнейшей работы.</p>
        <form action="">
          <div class="row">
            <div class="input-field col s6">
              <input v-model="email" required placeholder="email@email.com" id="email" type="email" class="validate">
              <label for="first_name">Email</label>
            </div>
            <div class="input-field col s6">
              <input v-model="password" required minlength="6" placeholder="" id="password" type="password" class="validate">
              <label for="password">Password</label>
            </div>
            <a class="right waves-effect waves-light blue darken-4 btn btn-large" :disabled="loading" @click="verifyAuth">
              <template v-if="loading"><i class="material-icons right rotate">sync</i>Проверка</template>  
              <template v-else><i class="material-icons right">east</i>Войти</template>    </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>


<script src="/javascripts/auth.js"></script>

<%- include('footer'); -%>